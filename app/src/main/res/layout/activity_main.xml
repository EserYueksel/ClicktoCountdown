<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="500dp"
        android:layout_height="800dp"
        android:adjustViewBounds="true"
        android:alpha="0.8"
        android:background="#B6BF83"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/chocobo_ffvii_ocean" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="238dp"
        android:layout_height="152dp"
        android:fontFamily="@font/autour_one"
        android:text="Countdown with Chocobo"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/system_accent2_900"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227" />

    <TextView
        android:id="@+id/counter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/autour_one"
        android:text="9"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/title_text"
        app:layout_constraintStart_toStartOf="@+id/title_text"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        tools:text="7" />

    <Button
        android:id="@+id/push_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#8A603800"
        android:fontFamily="@font/autour_one"
        android:text="push"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/counter_text"
        app:layout_constraintStart_toStartOf="@+id/counter_text"
        app:layout_constraintTop_toBottomOf="@+id/counter_text" />

</androidx.constraintlayout.widget.ConstraintLayout>